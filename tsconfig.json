{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "sourceMap": true, 
    "rootDir": "./",                         
    "baseUrl": "./src",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"]
    },                                
    "esModuleInterop": true,                       
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,       
    "resolveJsonModule": true
  }
}
